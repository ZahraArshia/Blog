<main>
  <section class="card column">
    <div class="card column">
      <h2><%= @post.title %></h2>
      <p><%= @post.text %></p>
    </div>
    <div class="commets-container">
      <h4>Comments:</h4>
      <ul>
        <% @post.comments.each do |comment| %>
          <p><%= comment.author.name %>: <%= comment.text %></p>
        <% end %>
      </ul>
    </div>
  </section>
</main>